# Application Environment Configuration Example
# Copy this file to .env and update the values

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password

# Database Names
IDENTITY_DB_NAME=IdentityDb
APPOINTMENT_DB_NAME=appointmentdb
CHAT_DB_NAME=chatappdb
NOTIFICATION_DB_NAME=notificationdb
DOCUMENT_DB_NAME=DocumentDb
AUTOMATION_DB_NAME=automationdb

# JWT Configuration
JWT_SECRET_KEY=your_super_secret_key_at_least_32_characters_long
JWT_ISSUER=IdentityApp
JWT_AUDIENCE=IdentityAppClients
JWT_ACCESS_EXPIRATION=30
JWT_REFRESH_EXPIRATION=7

# Service Public URLs (for email confirmation links)
FRONTEND_PUBLIC_BASE_URL=http://your-frontend-url:8080
IDENTITY_PUBLIC_BASE_URL=http://your-identity-url:5005

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_minio_password
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET=avatars
MINIO_BUCKET_DOCUMENTS=documents
MINIO_USE_SSL=false
MINIO_PUBLIC_BASE_URL=http://your-minio-url:9000

# SMTP Configuration for Email
SMTP_HOST=your-smtp-host.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=your-from-email@example.com
SMTP_FROM_NAME=YourAppName
SMTP_SECURE_SOCKET=StartTls

# Seed Admin User Configuration
SEED_ADMIN_EMAIL=admin@example.com
SEED_ADMIN_PASSWORD=your_admin_password
SEED_ADMIN_USERNAME=admin
SEED_ADMIN_FIRSTNAME=System
SEED_ADMIN_LASTNAME=Admin
SEED_ADMIN_RESET_PASSWORD_ON_STARTUP=false